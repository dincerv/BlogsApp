@model BlogModel
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Edit";
}

<h1>@ViewData["Title"]</h1>

<h4>Blog</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Edit">
		@Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row mb-3">
                <label asp-for="Title" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Title" class="form-control" />
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="Content" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Content" class="form-control" />
					<span asp-validation-for="Content" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="Rating" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Rating" class="form-control" />
					<span asp-validation-for="Rating" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="CategoryId" class="col-2 col-form-label"></label>
				<div class="col-5">
					<select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
						<option value="">-- Select --</option>
					</select>
					<span asp-validation-for="CategoryId" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="PublishedDate" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="PublishedDate" class="form-control" />
					<span asp-validation-for="PublishedDate" class="text-danger"></span>
				</div>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="row mb-3">
                <label asp-for="CreatedAt" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="CreatedAt" class="form-control" />
					<span asp-validation-for="CreatedAt" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="UpdatedAt" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="UpdatedAt" class="form-control" />
					<span asp-validation-for="UpdatedAt" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
				<div class="offset-2 col-5">
					<input type="submit" value="Save" class="btn btn-primary" />
					&nbsp;&nbsp;
                    <button type="reset" class="btn btn-outline-primary">Reset</button>
					&nbsp;&nbsp;
					<a asp-action="Index">Back to List</a>
				</div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
