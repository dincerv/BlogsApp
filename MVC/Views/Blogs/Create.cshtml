@model BlogModel
@{
    ViewData["Title"] = "Create Blog";
}

<h1>@ViewData["Title"]</h1>
<h4>Blog</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Title" class="col-md-2 col-form-label">Blog Title</label>
                <div class="col-md-10">
                    <input asp-for="Title" class="form-control" placeholder="Enter blog title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Content" class="col-md-2 col-form-label">Content</label>
                <div class="col-md-10">
                    <textarea asp-for="Content" class="form-control" placeholder="Enter blog content"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Rating" class="col-md-2 col-form-label">Rating</label>
                <div class="col-md-10">
                    <input asp-for="Rating" type="number" class="form-control" placeholder="0-5" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="CategoryId" class="col-md-2 col-form-label">Category</label>
                <div class="col-md-10">
                    <select asp-for="CategoryId" asp-items="ViewBag.CategoryId" class="form-control">
                        <option value="">Select a category</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="PublishedDate" class="col-md-2 col-form-label">Published Date</label>
                <div class="col-md-10">
                    <input asp-for="PublishedDate" type="date" class="form-control" />
                    <span asp-validation-for="PublishedDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-md-2 col-md-10">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="reset" class="btn btn-outline-secondary">Reset</button>
                    <a asp-action="Index" class="btn btn-link">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
